<Window
    x:Class="AutoICO.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:AutoICO"
    mc:Ignorable="d"
    Title="AutoICO"
    MinWidth="600" MinHeight="400"
    Width="800" Height="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="20" FontSize="24" Text="AutoICO - Convert Images to .ico Files" />
        
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Drag and drop an image here or click to select a file" 
                       TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,20" />
            <Button x:Name="SelectFileButton" Content="Select Image" 
                    HorizontalAlignment="Center" Padding="12,8" Margin="0,20,0,0"
                    Click="SelectFileButton_Click" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <Button x:Name="SettingsButton" Content="Settings" Margin="0,0,10,0" />
            <Button x:Name="ConvertButton" Content="Convert" IsEnabled="False" Click="ConvertButton_Click" />
        </StackPanel>
    </Grid>
</Window>
